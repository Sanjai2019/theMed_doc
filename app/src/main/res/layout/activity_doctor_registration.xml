<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundfinal"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    app:showPaths="true"
    android:fillViewport="true"
    tools:context=".doctor_registration">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center"
        android:text="Register with your details"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dp"
        android:layout_width="110dp"
        android:layout_height="101dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:civ_border_color="#000"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/labnextbt"
        android:layout_width="120sp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/radiogroup"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/radiogroup"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_iconPosition="right"
        fancy:fb_radius="30dp"
        fancy:fb_text="Register"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textFontRes="@font/josefin_sans_bold"
        fancy:fb_textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:layout_width="49dp"
        android:layout_height="31dp"
        android:backgroundTint="#fff"
        android:src="@drawable/camera"
        android:tintMode="add"
        app:layout_constraintBottom_toBottomOf="@+id/dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />


    <ImageButton
        android:id="@+id/addlocationlab"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:srcCompat="@drawable/ic_baseline_add_location_24" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Add your current Location"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/mobiledoctor"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/mobiledoctor"
        app:layout_constraintTop_toBottomOf="@+id/mobiledoctor" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Your Slot wish"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/addlocationlab"
        app:layout_constraintStart_toStartOf="@+id/addlocationlab"
        app:layout_constraintTop_toBottomOf="@+id/addlocationlab" />

    <EditText
        android:id="@+id/labnamereg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_semibold"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textCapWords"
        android:maxLength="15"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/dp"
        app:layout_constraintStart_toStartOf="@+id/dp"
        app:layout_constraintTop_toBottomOf="@+id/dp" />

    <EditText
        android:id="@+id/workingindoctor"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_semibold"
        android:gravity="center"
        android:hint="Working In"
        android:inputType="textCapWords"
        android:maxLength="40"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/labnamereg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labnamereg"
        app:layout_constraintTop_toBottomOf="@+id/labnamereg" />

    <EditText
        android:id="@+id/proprietornamereg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_semibold"
        android:gravity="center"
        android:hint="Age (Above 25)"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/workingindoctor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/workingindoctor"
        app:layout_constraintTop_toBottomOf="@+id/workingindoctor" />

    <EditText
        android:id="@+id/emaildoctor"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_semibold"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/proprietornamereg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/proprietornamereg"
        app:layout_constraintTop_toBottomOf="@+id/proprietornamereg" />

    <EditText
        android:id="@+id/mobiledoctor"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_semibold"
        android:gravity="center"
        android:hint="Mobile"
        android:inputType="phone"
        android:maxLength="10"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/emaildoctor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emaildoctor"
        app:layout_constraintTop_toBottomOf="@+id/emaildoctor" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/forradiobuttons"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/slotmae"
        app:layout_constraintStart_toStartOf="@+id/slotmae"
        app:layout_constraintTop_toBottomOf="@+id/slotmae">

        <RadioButton
            android:id="@+id/radioButton"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Male"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/radioButton2"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Female"
            android:textColor="#fff" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/slotmae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/forradiobuttons"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mobiledoctor"
        app:layout_constraintStart_toStartOf="@+id/mobiledoctor"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/morning"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Morning"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/afternoon"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Afternoon"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/evening"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="Evening"
            android:textColor="#fff" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
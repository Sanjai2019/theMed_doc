<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundfinal"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".LabTestInfo">

    <EditText
        android:id="@+id/labtestname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="LabTest Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/serialnumberlab"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/serialnumberlab"
        app:layout_constraintTop_toBottomOf="@+id/serialnumberlab" />

    <EditText
        android:id="@+id/nooftest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="No of tests"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/labtestname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/labtestname"
        app:layout_constraintTop_toBottomOf="@+id/labtestname" />

    <EditText
        android:id="@+id/subtestname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="SubTest Names "
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/nooftest"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nooftest"
        app:layout_constraintTop_toBottomOf="@+id/nooftest" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="amount in rupees"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/subtestname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/subtestname"
        app:layout_constraintTop_toBottomOf="@+id/subtestname" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/upload"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/amount"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/amount"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintVertical_bias="0.202"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_iconPosition="right"
        fancy:fb_radius="30dp"
        fancy:fb_text="Submit"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textFontRes="@font/josefin_sans_bold"
        fancy:fb_textSize="20sp" />

    <EditText
        android:id="@+id/serialnumberlab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:fontFamily="@font/josefin_sans_bold"
        android:hint="Serial number(unique value..)"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#80ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />


</androidx.constraintlayout.widget.ConstraintLayout>